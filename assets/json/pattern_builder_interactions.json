{
	"gui":{

		"load-image":{
			"callbacks":{
				"click":"loadImage"
			}
		},
		"load-grid":{
			"callbacks":{
				"click":"loadGrid"
			}
		},
		"toggle-grid":{
			"callbacks":{
				"change":"toggleGridDisplay"
			}
		},

		"save-image":{
			"callbacks":{
				"click":"saveImage"
			}
		},

		"save-tile":{
			"callbacks":{
				"click":"saveTile"
			}
		},

		"save-width":{
			"callbacks":{
				"change":"saveWidth"
			}
		},

		"save-height":{
			"callbacks":{
				"change":"saveHeight"
			}
		},

		"tile-scale":{
			"callbacks":{
				"input":"changeScale"
			},
			"attributes":{
				"min":0.001,
				"max":2,
				"value":1,
				"step":0.001
			}
			
		}

	}
}