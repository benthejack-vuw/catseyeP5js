{
	"gui":{

		"load-image":{
			"callbacks":{
				"click":"loadImage"
			}
		},
		"load-grid":{
			"callbacks":{
				"click":"loadGrid"
			}
		},
		"toggle-grid":{
			"callbacks":{
				"change":"toggleGridDisplay"
			}
		},

		"save-image":{
			"callbacks":{
				"click":"saveImage"
			}
		},

		"save-tile":{
			"callbacks":{
				"click":"saveTile"
			}
		},

		"save-width":{
			"callbacks":{
				"change":"saveWidth"
			}
		},

		"save-height":{
			"callbacks":{
				"change":"saveHeight"
			}
		},

		"reset":{
			"callbacks":{
				"click":"reset"
			}
		},

		"clear-storage":{
			"callbacks":{
				"click":"clearLocalStore"
			}	
		},

		"showDefaultGrids":{
			"callbacks":{
				"click":"showDefaultGrids"
			}	
		},

		"showCustomGrids":{
			"callbacks":{
				"click":"showCustomGrids"
			}	
		},


		"tile-scale-slider":{
			"callbacks":{
				"input":"changeScale"
			},
			"attributes":{
				"min":0.001,
				"max":1,
				"value":0.5,
				"step":0.001
			}
		},
		"tile-scale-box":{
			"callbacks":{
				"input":"changeScale"
			},
			"attributes":{
				"min":0.001,
				"max":2,
				"value":1,
				"step":0.001
			}
		}
	}
}