{
	"keyboard":{
		
		"press":{
			"3": "change_current_poly",
			"4": "change_current_poly",
			"5": "change_current_poly",
			"6": "change_current_poly",
			"7": "change_current_poly",
			"8": "change_current_poly",
			"9": "change_current_poly",
			"control+d": "dataDump"
		},

		"release":{
			"any":"key_release",
			"delete": "delete_poly",
			"backspace": "delete_poly",
			"d":"delete_poly"
		}
	},

	"gui":{
		
		"polygonSides":{
			"attributes":{
				"min":3,
				"max":25,
				"step":1,
				"value":6
			},

			"callbacks":{
				"change":"change_current_poly"
			}
		},

		"scaleSlider":{
			
			"attributes":{
				"min":0.2,
				"max":2.0,
				"step":0.1
			},

			"callbacks":{
				"input":"changeScale"
			}
		},

		"toggleMode":{
			
			"attributes":{
				"style":"width:100%;"
			},

			"callbacks":{
				"click":"toggleMode"
			}
		},

		"saveTile":{
			"callbacks":{
				"click":"saveTile"
			}	
		},

		"saveTileImage":{
			"callbacks":{
				"click":"saveTileImage"
			}	
		},

		"previewTile":{
			"callbacks":{
				"click":"previewTile"
			}	
		},

		"crop":{
			"callbacks":{
				"click":"cropTiles"
			}	
		},

		"snapRotation":{
			"callbacks":{
				"click":"snapToSelection"
			}
		},

		"loadGrid":{
			"callbacks":{
				"click":"loadGrid"
			}	
		}

	}
}